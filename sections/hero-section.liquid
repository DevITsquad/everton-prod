<style>
/* .text_over_image .toi_text {
    position: absolute;
    top: 50%;
    left: 10rem;
    max-width: 400px;
    transform: translateY(-50%);
} */
.section-{{ section.id }}-alignment .toi_text{
  margin: {{ section.settings.alignment }}
}
.text_over_image {
    position: relative;
}
.text_over_image .toi_wrap img {
    display: block;
}  
.text_over_image .page-width {
    max-width: 1440px;
    margin: 0 auto;
}  
.text_over_image .toi_wrap {
    position: relative;
    display: grid;
}
.text_over_image .toi_wrap * {
    grid-row-start: 1;
    grid-column-start: 1;
    width: 100%;
}   
.text_over_image .toi_text {
    max-width: 520px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
    text-align: center;
    padding-top: 13rem;
} 
.text_over_image .toi_text h4 {
    font-size: 3rem;
    line-height: 1;
    color: #ffff;
    font-family: Karla, sans-serif;
    letter-spacing: 3px;
    font-weight: 600;
}

.text_over_image h2 {
    font-size: 8rem;
    line-height: 1;
    color: #ffff;
    margin-bottom: 2rem;
    margin-top: 2rem;
}

.text_over_image .toi_text p {
    color: #14efd6;
    font-size: 30px;
    display: block;
    margin-top: 2rem;
}

.text_over_image .button_wrap a {
    align-items: center;
    justify-content: center;
    background: #1ee3cc;
    width: auto !important;
    min-width: 280px;
    min-height: 46px;
    line-height: 46px;
    border-radius: 30px;
    font-family: Karla, sans-serif !important;
    letter-spacing: 1px;
    font-weight: 600;
}

.text_over_image .button_wrap {
    display: inline-flex;
    justify-content: center;
    margin-top: 5rem;
}  
@media only screen and (max-width: 1600px) {
  .text_over_image .toi_text{
    padding-top: 10rem;
  }
} 
@media only screen and (max-width: 1440px) {
 .text_over_image h2 {
    font-size: 6rem;
    margin-bottom: 1.6rem;
    margin-top: 1.6rem;
  }
  .text_over_image .toi_text h4 {
    font-size: 2rem;
}
.text_over_image .toi_text p {
    font-size: 24px;
    margin-top: 1.6rem;
}  
} 
@media only screen and (max-width: 1200px){
  .text_over_image .toi_text {
      padding-top: 8rem;
  }
}
@media only screen and (max-width: 800px) {
.text_over_image .toi_text {
    max-width: 100%;
/*     justify-content: flex-start; */
/*     padding-top: 3rem; */
}
{% if section.settings.verticalalignment == 'flex-start' %} 
.section-{{ section.id }}-alignment .toi_text{
   padding-top: 3rem;
   justify-content: {{ section.settings.verticalalignment }}
} 
{% elsif  section.settings.verticalalignment == 'center' %} 
.section-{{ section.id }}-alignment .toi_text{
   padding: 0;
   justify-content: {{ section.settings.verticalalignment }}
} 
{% elsif  section.settings.verticalalignment == 'flex-end' %}
.section-{{ section.id }}-alignment .toi_text{
   padding-bottom: 3rem;
   justify-content: {{ section.settings.verticalalignment }}
}   
{% endif %}
.text_over_image .toi_text h4 {
    font-size: 1.5rem;
}
.text_over_image h2 {
    font-size: 4rem;
}
.text_over_image .toi_text p {
    font-size: 18px;
}
.text_over_image .button_wrap {
    margin-top: 1.6rem;
}  
}
@media only screen and (max-width: 600px) {
{% if section.settings.verticalalignment == 'flex-start' %} 
.section-{{ section.id }}-alignment .toi_text{
   padding-top: 2rem;
   justify-content: {{ section.settings.verticalalignment }}
} 
{% elsif  section.settings.verticalalignment == 'center' %} 
.section-{{ section.id }}-alignment .toi_text{
   padding: 0;
   justify-content: {{ section.settings.verticalalignment }}
} 
{% elsif  section.settings.verticalalignment == 'flex-end' %}
.section-{{ section.id }}-alignment .toi_text{
   padding-bottom: 2rem;
   justify-content: {{ section.settings.verticalalignment }}
}   
{% endif %}

.text_over_image .toi_text h4 {
    font-size: 16px;
}

.text_over_image h2 {
    font-size: 48px;
    margin-top: 10px;
    margin-bottom: 15px;
}

.text_over_image .toi_text p {
    font-size: 14px;
    margin-top: 10px;
}

.text_over_image .button_wrap {
    margin-top: 10px;
}

.text_over_image .button_wrap a {
    min-width: 150px;
    font-size: 14px;
}
}

</style>
<div class="text_over_image section-{{ section.id }}-alignment">
  <div class="toi_wrap">
    <picture>
      <source media="(min-width:800px)" srcset="{{ section.settings.desktop_img | img_url: 'master' }}">
      <img src="{{ section.settings.mobile_img | img_url: 'master' }}" alt="image">
    </picture>
    <div class="page-width">
    <div class="toi_text">
      {% if section.settings.heading != blank %}
      <h4>{{ section.settings.heading }}</h4>
      {% endif %}
      {% if section.settings.headingmiddle != blank %}
      <h2>{{ section.settings.headingmiddle }}</h2>
      {% endif %}
      {% if section.settings.headingmiddletwo != blank %}
      <h4>{{ section.settings.headingmiddletwo }}</h4>
      {% endif %}
      {% if section.settings.colortext != blank %}
      <p>{{ section.settings.colortext }}</p>
      {% endif %}
      {% if section.settings.buttonlabel != blank %}
        <div class="button_wrap">
          <a href="{{ section.settings.buttonlink }}">{{ section.settings.buttonlabel }}</a>
        </div>
      {% endif %}
    </div>
  </div>
  </div>
</div>
{% schema %}
  {
    "name": "Text over image",
    "settings": [
        {
          "type": "image_picker",
          "id": "desktop_img",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_img",
          "label": "Mobile Image"
        },
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "headingmiddle",
          "label": "Text"
        },
        {
          "type": "textarea",
          "id": "headingmiddletwo",
          "label": "Text"
        },
        {
          "type": "textarea",
          "id": "colortext",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "buttonlabel",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "buttonlink",
          "label": "Button link"
        },
        {
           "type": "select",
           "id": "alignment",
           "options": [
              { "value": "0 auto 0 0", "label": "Left"},
              { "value": "0 auto 0 auto", "label": "Center"},
              { "value": "0 0 0 auto", "label": "Right"}
           ],
           "label": "Text Alignment"
        },
        {
           "type": "select",
           "id": "verticalalignment",
           "options": [
              { "value": "flex-start", "label": "Top"},
              { "value": "center", "label": "Center"},
              { "value": "flex-end", "label": "Bottom"}
           ],
           "label": "Mobile Text Alignment"
        }
    ],
"presets": [
 {
   "name": "Text over image",
   "category": "product"
 }
]
}
{% endschema %}

