<style>
      /* .text_over_image .toi_text {
          position: absolute;
          top: 50%;
          left: 10rem;
          max-width: 400px;
          transform: translateY(-50%);
      } */
      .section-{{ section.id }}-alignment .toi_text{
        margin: {{ section.settings.alignment }}
      }
      .text_over_image {
          position: relative;
      }
      .text_over_image .toi_wrap img {
          display: block;
      }
      .text_over_image .page-width {
          max-width: 1440px;
          margin: 0 auto;
      }
      .text_over_image .toi_wrap {
          position: relative;
          display: grid;
      }
      .text_over_image .toi_wrap * {
          grid-row-start: 1;
          grid-column-start: 1;
          width: 100%;
      }
      .text_over_image .toi_text {
          max-width: 520px;
          display: flex;
          flex-direction: column;
          justify-content: flex-start;
          height: 100%;
          text-align: center;
          padding-top: 13rem;
      }
      .text_over_image .toi_text h4 {
          font-size: 3rem;
          line-height: 1;
          color: #ffff;
          font-family: Karla, sans-serif;
          letter-spacing: 3px;
          font-weight: 600;
      }
      .toi_text h4.toi_text__heaing{
        font-size:1.3rem ;
      }

      .text_over_image h2 {
          font-size: 8rem;
          line-height: 1;
          color: #ffff;
          margin-bottom: 2rem;
          margin-top: 2rem;
      }

      .text_over_image .toi_text p {
          color: #14efd6;
          font-size: 30px;
          display: block;
          margin-top: 2rem;
      }

      .text_over_image .button_wrap a {
          align-items: center;
          justify-content: center;
          background: #1ee3cc;
          width: auto !important;
          min-width: 280px;
          min-height: 46px;
          line-height: 46px;
          border-radius: 30px;
          font-family: Karla, sans-serif !important;
          letter-spacing: 1px;
          font-weight: 600;
      }

      .text_over_image .button_wrap {
          display: inline-flex;
          justify-content: center;
          margin-top: 5rem;
      }

      div#aditional-text1 h1,
      div#aditional-text1 h2,
      div#aditional-text1 h3,
      div#aditional-text1 h4,
      div#aditional-text1 h5,
      div#aditional-text1 h6,
      div#aditional-text1 a,
      div#aditional-text1 p{
        {%- if section.settings.aditional-text1-color != blank -%}
          color: {{ section.settings.aditional-text1-color }} !important;
        {%- else -%}
        color: white !important;
        {%- endif -%}
      color: {{ section.settings.aditional-text1-color }} !important;
    }
      div#aditional-text2 h1,
      div#aditional-text2 h2,
      div#aditional-text2 h3,
      div#aditional-text2 h4,
      div#aditional-text2 h5,
      div#aditional-text2 h6,
      div#aditional-text2 a,
      div#aditional-text2 p{
  {%- if section.settings.aditional-text2-color != blank -%}
    color: {{ section.settings.aditional-text2-color }} !important;
  {%- else -%}
  color: white !important;
  {%- endif -%}


      }
      @media only screen and (max-width: 1600px) {
        .text_over_image .toi_text{
          padding-top: 10rem;
        }
      }
      @media only screen and (max-width: 1440px) {
       .text_over_image h2 {
          font-size: 6rem;
          margin-bottom: 1.6rem;
          margin-top: 1.6rem;
        }
        .text_over_image .toi_text h4 {
          font-size: 2rem;
      }
      .toi_text h4.toi_text__heaing{
        font-size: 1.2rem;
      }
      .text_over_image .toi_text p {
          font-size: 24px;
          margin-top: 1.6rem;
      }
      }
      @media only screen and (max-width: 1200px){
        .text_over_image .toi_text {
            padding-top: 8rem;
        }
      }
      @media only screen and (max-width: 800px) {
      .text_over_image .toi_text {
          max-width: 100%;
      /*     justify-content: flex-start; */
      /*     padding-top: 3rem; */
      }
      {% if section.settings.verticalalignment == 'flex-start' %}
      .section-{{ section.id }}-alignment .toi_text{
         padding-top: 3rem;
         justify-content: {{ section.settings.verticalalignment }}
      }
      {% elsif  section.settings.verticalalignment == 'center' %}
      .section-{{ section.id }}-alignment .toi_text{
         padding: 0;
         justify-content: {{ section.settings.verticalalignment }}
      }
      {% elsif  section.settings.verticalalignment == 'flex-end' %}
      .section-{{ section.id }}-alignment .toi_text{
         padding-bottom: 3rem;
         justify-content: {{ section.settings.verticalalignment }}
      }
      {% endif %}
      .text_over_image .toi_text h4 {
          font-size: 1.5rem;
      }
      .toi_text h4.toi_text__heaing{
        font-size: 1rem;
      }
      .text_over_image h2 {
          font-size: 4rem;
      }
      .text_over_image .toi_text p {
          font-size: 18px;
      }
      .text_over_image .button_wrap {
          margin-top: 1.6rem;
      }
      }
      @media only screen and (max-width: 600px) {
      {% if section.settings.verticalalignment == 'flex-start' %}
      .section-{{ section.id }}-alignment .toi_text{
         padding-top: 2rem;
         justify-content: {{ section.settings.verticalalignment }}
      }
      {% elsif  section.settings.verticalalignment == 'center' %}
      .section-{{ section.id }}-alignment .toi_text{
         padding: 0;
         justify-content: {{ section.settings.verticalalignment }}
      }
      {% elsif  section.settings.verticalalignment == 'flex-end' %}
      .section-{{ section.id }}-alignment .toi_text{
         padding-bottom: 2rem;
         justify-content: {{ section.settings.verticalalignment }}
      }
      {% endif %}

      .text_over_image .toi_text h4 {
          font-size: 16px;
      }
      .toi_text h4.toi_text__heaing{
        font-size: 11px;
      }


      .text_over_image h2 {
          font-size: 48px;
          margin-top: 10px;
          margin-bottom: 15px;
      }

      .text_over_image .toi_text p {
          font-size: 14px;
          margin-top: 10px;
      }

      .text_over_image .button_wrap {
          margin-top: 10px;
      }

      .text_over_image .button_wrap a {
          min-width: 150px;
          font-size: 14px;
      }
      }
</style>
<div class="text_over_image section-{{ section.id }}-alignment">
  <div class="toi_wrap">
    <picture>
      <source media="(min-width:800px)" srcset="{{ section.settings.desktop_img | img_url: 'master' }}">
      <img src="{{ section.settings.mobile_img | img_url: 'master' }}" alt="image">
    </picture>
    <div class="page-width">
      <div class="toi_text">
        {% if section.settings.heading != blank %}
          <h4 style="color:{{section.settings.heading-color}};" class="toi_text__heaing">
            {{ section.settings.heading }}
          </h4>
        {% endif %}
        {% if section.settings.headingmiddle != blank %}
          <h2 style="color:{{section.settings.headingmiddle-color}};">{{ section.settings.headingmiddle }}</h2>
        {% endif %}

        {% if section.settings['aditional-text1'] != blank %}
          <div id="aditional-text1">{{ section.settings['aditional-text1'] }}</div>
        {% endif %}
        {% if section.settings['aditional-text2'] != blank %}
          <div id="aditional-text2">{{ section.settings['aditional-text2'] }}</div>
        {% endif %}

        {% if section.settings.headingmiddletwo != blank %}
          <h4 style="color:{{section.settings.headingmiddle-color}};">{{ section.settings.headingmiddletwo }}</h4>
        {% endif %}
        {% if section.settings.colortext != blank %}
          <p style="color:{{section.settings.colortext-color}};">{{ section.settings.colortext }}</p>
        {% endif %}
        {% if section.settings.buttonlabel != blank %}
          <div class="button_wrap">
            <a style="background:{{section.settings.background-color}};" href="{{ section.settings.buttonlink }}">
              {{- section.settings.buttonlabel -}}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
